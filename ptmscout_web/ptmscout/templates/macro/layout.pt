    	      <li><a href="${request.route_url('upload')}">Upload Dataset</a></li>
    	      <li><a href="${request.route_url('compendia')}">Downloads</a></li>
    	      <li><a target='_blank' href="${documentationUrl}">Documentation</a></li>
