<div metal:define-macro="experiment_header">
	<div id="experimentMenu">
		<a href="${request.application_url}/experiments/${experiment.id}/summary">Experiment Summary</a>  
		<tal:empty tal:condition="experiment.export != 0">
			| <a href="${request.application_url}/experiments/${experiment.id}/browse">Browse Dataset</a>
			| <a href="${request.application_url}/experiments/${experiment.id}/subsets">Evaluate Subsets</a>
			| <a href="${request.application_url}/experiments/${experiment.id}/batch">Compare Datasets</a>
			<tal:empty tal:condition="experiment.ambiguity == 1">
				| <a href="${request.application_url}/experiments/${experiment.id}/ambiguity">Report Ambiguity</a>
			</tal:empty>
	   	</tal:empty>
	</div>
	<div metal:define-slot="menu"></div>
	<div id="experimentInfo" >
	   	<fieldset>
	   		<legend>Experiment</legend>
	   		<a href="${experiment.getUrl()}" tal:condition="experiment.getUrl() != None">${experiment.name}</a>
	   		<tal:expname tal:condition="experiment.getUrl() == None">${experiment.name}</tal:expname><br />
			<tal:expcitation tal:content="structure experiment.getLongCitationString()"></tal:expcitation><br />
		    <br /><br />
		    ${experiment.description}
		    <br /><br />
		    Loaded: ${experiment.date}<br />
	    </fieldset>
	</div>
</div>