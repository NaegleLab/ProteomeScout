<div metal:use-macro="layout">
    <div metal:fill-slot="content">
    	<div class="loginform">
    		<div tal:condition="reason != None" class="errorbox">Error: ${reason}</div>
	        <form method="POST" action="${request.application_url}/process_login">
	      		<div class="formcategory">Enter Credentials:</div>
	        	<table>
	        		<tr>
	        			<td class="fieldname">Username:</td>
	        			<td><input type="text" name="username" value="${username}" /></td>
	        		</tr>
	        		<tr>
	        			<td class="fieldname">Password:</td>
	        			<td><input type="password" name="password" value="" /></td>
	        		</tr>
	        	</table>
	        	<div class="formsubmission"><input type="submit" value="Register" /></div>
	        </form>
	        <div class="centered">No credentials? Register <a href="${request.application_url}/register">here</a></div>
	        <div></div>
	    </div>
    </div>
</div>