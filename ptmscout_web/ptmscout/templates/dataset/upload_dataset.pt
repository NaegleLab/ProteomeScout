<div metal:use-macro="layout">
    <metal:slot metal:fill-slot="header">
    	<script type="text/javascript" src="${request.static_url('ptmscout:static/js/upload.form.js')}"></script>
        <link rel="stylesheet" type="text/css" href="${request.static_url('ptmscout:static/css/forms.css')}" />
    </metal:slot>
    <div metal:fill-slot="content">
        <form action="" method="post" enctype="multipart/form-data">
            <input type="hidden" value="true" name="submitted" />
            <div class="wideform">
                <div class="error_display" tal:condition="len(errors)>0">
                    <ul>
                        <li tal:repeat="error errors" tal:content="error"></li>
                    </ul>
                </div>
                <div class="formcategory">Dataset</div>
                <table>
                    <tr>
                        <th>Upload type:</th>
                        <td>
                            ${formrenderer.render('load_type', id_='new_dataset', tooltip='Create a new dataset')}
                            ${formrenderer.render('load_type', id_='append_dataset', tooltip='Append data to an existing dataset')}
                            ${formrenderer.render('load_type', id_='reload_dataset', tooltip='Replace an existing dataset with new data')}
                        </td>
                    </tr>
                    <tr id="parent_exp">
                        <td class="fieldname">Source Dataset:</td>
                        <td>
                            ${formrenderer.render('source_dataset', id_='expselect', class_='stretch')}
                        </td>
                    </tr>
                    <tr id="datasetname">
                        <td class="fieldname">Dataset Name: </td>
                        <td > ${formrenderer.render('datasetname')} </td>
                    </tr>
                    <tr>
                        <td class="fieldname">Dataset File: </td>
                        <td > ${formrenderer.render('datasetfile')} </td>
                    </tr>
                </table>

                <div class="formsubmission"><input type="submit" value="Continue" class="longtask" /></div>
                <div class="clear"></div>               
            </div>
        </form>
    </div>
</div>
