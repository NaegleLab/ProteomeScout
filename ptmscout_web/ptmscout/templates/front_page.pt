    <head>
        <?python import ptmscout.config as config; ?>
        <title>PTMScout Portal</title>
        <link rel="stylesheet" type="text/css" href="${request.static_url('ptmscout:static/css/ptmscout.css')}" />
    </head>
    <body>
        <div id="menu">
            <div style="float:right;text-align:right">
                <span tal:condition="request.user == None">
                    <a href='${request.application_url}/login'>Login</a>
                </span>
                <span tal:condition="request.user != None">
                    <a href='${request.application_url}/account'>Account: ${request.username}</a> |
                    <a href='${request.application_url}/account/experiments'>My Experiments</a> |
                    <a href='${request.application_url}/logout'>Logout</a>
                </span>
            </div>
        </div>
        <div class="split"></div>
        <div id="splash">
            <img src="${request.static_url('ptmscout:static/images/ptmscout_logo.png')}" />

            <div id="portal">
                <div class="menusplash">
                    <img src="${request.static_url('ptmscout:static/images/ptmscout_splash.png')}" />
                </div>
                <a href="${request.application_url}/proteins">
                    <div class="menuitem" style="top:70px; left:255px;">
                        <span>Browse<br>Proteins</span>
                    </div>
                </a>
                <a href="${request.application_url}/upload">
                    <div class="menuitem" style="top:70px; right:255px;">
                        <span>Upload<br>Dataset</span>
                    </div>
                </a>

                <a href="${request.application_url}/experiments">
                    <div class="menuitem" style="top:200px; left:160px;">
                        <span>Browse<br>Experiments</span>
                    </div>
                </a>
                <a href="${request.application_url}/annotate">
                    <div class="menuitem" style="top:200px; right:160px;">
                        <span>Annotate<br>Peptides</span>
                    </div>
                </a>

                <a href="${documentationUrl}title=Main_Page">
                    <div class="menuitem" style="top:345px; left:195px;">
                        <span>Documentation</span>
                    </div>
                </a>
                <a href="${naegleUrl}">
                    <div class="menuitem" style="top:345px; right:195px;">
                        <span>The Naegle Lab</span>
                    </div>
                </a>
            </div>
        </div>

