<div metal:use-macro="layout">
	<div metal:fill-slot="content">

    <div id="iewarn" title="Warning!" style="display: none;">
        Warning! We have detected that your browser does not support Scalable Vector Graphics. We recommend viewing this site using the most recent versions of Chrome, Opera, or Firefox. We recommend Chrome for the best performance. Using Internet Explorer or any legacy browser will not allow you to use many graphical features of PTMScout.
    </div>

    <div id="splash">

      <div id="portal">
        <div class="menusplash">
          <img src="${request.static_url('ptmscout:static/images/ptmscout_splash.png')}" style="margin-left:-85px" />
        </div>
      
        <a href="${request.application_url}/proteins">
          <div class="menuitem" style="top:70px; left:255px;">
            <span>Browse<br>Proteins</span>
          </div>
        </a>
        <a href="${request.application_url}/upload">
          <div class="menuitem" style="top:70px; right:255px;">
            <span>Upload<br>Dataset</span>
          </div>
        </a>

        <a href="${request.application_url}/experiments">
          <div class="menuitem" style="top:230px; left:180px;">
            <span>Browse<br>Experiments</span>
          </div>
        </a>

        <div class="inactive" style="top:230px; right:180px;">
            <span>Annotate<br>Peptides</span>
        </div>

        <a href="${documentationUrl}title=Main_Page">
          <div class="menuitem" style="top:380px; left:255px;">
              <span>View<br>Documentation</span>
          </div>
        </a>
      
        <a href="${naegleUrl}">
          <div class="menuitem" style="top:380px; right:255px;">
              <span>The Naegle<br>Lab</span>
          </div>
        </a>
      </div> <!-- portal -->
    </div> <!-- splash -->
  </div> 
</div> 
