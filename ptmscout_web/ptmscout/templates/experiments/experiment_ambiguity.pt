<div metal:use-macro="layout">
	<div metal:fill-slot="header">
		<link rel="stylesheet" type="text/css" href="${request.static_url('ptmscout:static/css/experiments.css')}" />
		<link rel="stylesheet" type="text/css" href="${request.static_url('ptmscout:static/css/proteins.css')}" />
	</div>
	<div metal:fill-slot="content">
        <div metal:use-macro="experiment_header"></div>

        <table>
			<thead>
                <tr align="left" class="header">
                    <th>MS id</th>
                    <th>Protein</th>
                    <th>Species</th>
                    <th>Peptide</th>
                    <th>Modification Sites</th>
                    <th>Alternate Assignments</th>
				</tr>
			</thead>

			<tbody>
				<tr valign="top" tal:repeat="(r, ms_id, prot_name, spec_name, pep, sites) peptides" tal:attributes="class 'row ' + 'even' if r % 2 == 0 else 'odd';" >
					<td tal:content="ms_id"></td>
                    <td tal:content="prot_name"></td>
					<td tal:content="spec_name"></td>
					<td tal:content="pep"></td>
                    <td>
                        <div class="modentry" tal:repeat="(name,mod) sites">
                            <span class="site" tal:content="name"></span>
                            <span class="mod" tal:content="mod"></span>
                        </div>
                    </td>
                    <td tal:content="structure formrenderer.render('ms%d' % (ms_id))"></td>
                </tr>
			</tbody>

        </table>
    </div>
</div>
	
